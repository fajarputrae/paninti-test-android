<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_nation_pict"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:contentDescription="Nation Flag"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_akun"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="19sp"
        android:maxLines="3"
        android:textColor="@color/colorTextPrimary"
        android:textFontWeight="400"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_nation_pict"
        app:layout_constraintStart_toEndOf="@id/iv_nation_pict"
        app:layout_constraintTop_toTopOf="@id/iv_nation_pict"
        tools:text="Indonesia" />

</androidx.constraintlayout.widget.ConstraintLayout>