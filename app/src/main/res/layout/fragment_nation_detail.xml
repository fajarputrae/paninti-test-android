<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".ui.NationDetailFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_top_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/colorPrimary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Menu Back"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/label_page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="17dp"
            android:fontFamily="@font/opensans_semibold"
            android:letterSpacing="0.01"
            android:lineHeight="24sp"
            android:text="Nation Detail"
            android:textColor="@color/colorWhite"
            android:textFontWeight="500"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/iv_back"
            app:layout_constraintStart_toEndOf="@id/iv_back"
            app:layout_constraintTop_toTopOf="@id/iv_back" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/img_nation_flag"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_top_bar" />

    <TextView
        android:id="@+id/label_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:text="Country Name:"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/img_nation_flag"
        app:layout_constraintTop_toBottomOf="@id/img_nation_flag" />

    <TextView
        android:id="@+id/text_country_name"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:maxLines="3"
        android:gravity="end"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_nation_flag"
        app:layout_constraintTop_toTopOf="@id/label_country_name"
        tools:text="Indonesia" />

    <TextView
        android:id="@+id/label_continent_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:text="Region Name:"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/label_country_name"
        app:layout_constraintTop_toBottomOf="@id/text_country_name" />

    <TextView
        android:id="@+id/text_region_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_nation_flag"
        app:layout_constraintTop_toTopOf="@id/label_continent_name"
        tools:text="Asia" />

    <TextView
        android:id="@+id/label_lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:text="Longitude:"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/label_continent_name"
        app:layout_constraintTop_toBottomOf="@id/label_continent_name" />


    <TextView
        android:id="@+id/text_lng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_nation_flag"
        app:layout_constraintTop_toTopOf="@id/label_lng"
        tools:text="11.2333" />

    <TextView
        android:id="@+id/label_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:text="Latitude:"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/label_lng"
        app:layout_constraintTop_toBottomOf="@id/label_lng" />

    <TextView
        android:id="@+id/text_lat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/img_nation_flag"
        app:layout_constraintTop_toTopOf="@id/label_lat"
        tools:text="33.4555" />

    <TextView
        android:id="@+id/label_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:text="Language(s):"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/label_lat"
        app:layout_constraintTop_toBottomOf="@id/label_lat" />

    <TextView
        android:id="@+id/text_language"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/opensans_reg"
        android:letterSpacing="0.01"
        android:lineHeight="18sp"
        android:textColor="@color/colorTextPrimary"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/label_language"
        app:layout_constraintTop_toBottomOf="@id/label_language"
        tools:text="Indonesia" />

</androidx.constraintlayout.widget.ConstraintLayout>